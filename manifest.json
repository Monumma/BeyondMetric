{
    "manifest_version": 2,
    "name": "Beyond Metric",
    "version": "0.1",
    "description": "Change the measures in dndbeyond.com to the metric system.",
    "icons": {
        "48": "assets/icon-48.png",
        "96": "assets/icon-96.png",
        "512": "assets/icon-512.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.dndbeyond.com/*"
            ],
            "js": [
                "beyondmetric.js"
            ]
        }
    ]
}